{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node", "react", "react-dom"]
  }
}
